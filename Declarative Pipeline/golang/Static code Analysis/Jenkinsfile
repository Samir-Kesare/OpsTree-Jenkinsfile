pipeline {
    agent any

    tools {
        go 'go1.22.0'  // Assuming "go.1.22.0" tool is installed and configured
    }

    stages {
        stage('Git Checkout') {
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/OT-MyGurukulam/employee-api.git'
                }
            }
        }

        stage('Static Code Analysis') {
            steps {
                withCredentials([string(credentialsId: 'jenkins-sonar-01', variable: 'jenkins-sonar-01')]) {
                    sh '''
                    gosonar-scanner \
                      -DprojectKey=employee-api \
                      -Dsonar.sources=. \
                      -Dsonar.host.url=http://13.201.1.99/:9000 \
                      -Dsonar.token=${jenkins-sonar-01}
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs cleanWhenSuccess: false
        }
        success {
            echo 'Build Successfully !'
        }
        failure {
            echo 'Build Failed !'
        }
    }
}
