pipeline {
    agent any

    stages {
        stage('codecheckout') {
            steps {
                 git branch: 'main', changelog: false, poll: false, url: 'https://github.com/OT-MyGurukulam/employee-api.git'
            }
        }

        stage('code analysis') {
            steps {
                withCredentials([string(credentialsId: 'demo', variable: 'tokenn')]) {
                    sh '''
                          sonar-scanner \
                         -Dsonar.projectKey=demo-token \
                         -Dsonar.sources=. \
                         -Dsonar.host.url=http://13.201.1.99/:9000 \
                         -Dsonar.token=${tokenn}
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }
    }
}

