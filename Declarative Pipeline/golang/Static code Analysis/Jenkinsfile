pipeline {
    agent any

    stages {
        stage("Git Checkout") {
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/OT-MyGurukulam/employee-api.git'
                }
            }
        }
        stage('Static Code Analysis') {
            steps {
                withSonarQubeEnv(credentialsId: 'jenkins-sonar-01', installationName: 'sq1') { 
                    sh '''
                    export PATH="$PATH:/path/to/sonar-scanner/bin"  # Add Sonar Scanner to PATH
                    sonar-scanner \
                        -Dsonar.projectKey=golang-SCA\
                        -Dsonar.sources=. \
                        -Dsonar.host.url=http://13.201.1.99/:9000 \
                        -Dsonar.login=demo-token
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs cleanWhenSuccess: false
        }
        success {
            echo 'Build Successfully !'
        }
        failure {
            echo 'Build Failed !'
        }
    }
}
