pipeline {
    agent any

    stages {
        stage("Git Checkout") {
            steps {
                script {
                    git branch: 'main', credentialsId: 'khushi_cred', url: 'https://github.com/OT-MyGurukulam/employee-api.git'
                }
            }
        }
        stage('Static Code Analysis') {
            environment {
                PATH = "/opt/sonar-scanner/bin:$PATH"
            }
            steps {
                sh '''
                sonar-scanner \
                    -Dsonar.projectKey=golang-SCA \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=http://13.201.1.99:9000/
                    -Dsonar.login=demo-token
                '''
            }
        }
    }

    post {
        always {
            cleanWs cleanWhenSuccess: false
        }
        success {
            echo 'Build Successfully !'
        }
        failure {
            echo 'Build Failed !'
        }
    }
}
