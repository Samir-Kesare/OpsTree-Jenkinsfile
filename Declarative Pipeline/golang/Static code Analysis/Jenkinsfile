pipeline {
    agent any
    stages {
        stage("Git Checkout") {
            steps {
                script {
                    git branch: 'main', credentialsId: 'khushi_cred', url: 'https://github.com/OT-MyGurukulam/employee-api.git'
                }
            }
        }
        stage('Static Code Analysis') {
            environment {
                PATH = "/opt/sonar-scanner:$PATH"
            }
            steps {
                sh '''
                    sonarscanner \
                    -Dsonar.projectKey=SCA-go \
                    -Dsonar.sources=. \
                    -Dsonar.host.url=http://13.201.35.61:9000/ \
                    -Dsonar.login=sqp_ea6d6dc038364bae89aa72209aed54f42b3b9d57
                '''
            }
        }
    }
    post {
        always {
            cleanWs cleanWhenSuccess: false
        }
        success {
            echo 'Build Successfully !'
        }
        failure {
            echo 'Build Failed !'
        }
    }
}
