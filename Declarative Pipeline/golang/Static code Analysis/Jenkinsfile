pipeline {
    agent any
    tools {
        go 'go1.22.0'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', credentialsId: 'khushi_cred', url: 'https://github.com/OT-MyGurukulam/employee-api.git'
            }
        }
        stage('Build') {
            steps {
                sh 'go build'
            }
        }
        stage('Test') {
            steps {
                // Create a test file
                script {
                    writeFile file: 'test_my_function_test.go', text: '''
                        package main

                        import (
                            "testing"
                        )

                        func TestMyFunction(t *testing.T) {
                            // Your test logic here
                        }
                    '''
                }
                
                // Execute Go tests
                sh 'go test ./...'
            }
        }
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sq1') {
                    script {
                        def scannerHome = tool 'sonar-scanner'
                        withEnv(["/opt/sonar-scanner=${scannerHome}/bin"]) {
                            sh 'sonar-scanner'
                        }
                    }
                }
            }
        }
    }
}
